{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "build": {
            "dependsOn": ["^build", "^generate"],
            "outputs": [".next/**", "!.next/cache/**", "dist/**"],
            "cache": true,
            "env": [
                "NODE_ENV",
                "AUTH_SECRET",
                "AUTH_KAKAO_ID",
                "AUTH_KAKAO_SECRET",
                "DATABASE_URL",
                "AWS_REGION",
                "AWS_ACCESS_KEY_ID",
                "AWS_SECRET_ACCESS_KEY",
                "AWS_S3_BUCKET_NAME",
                "OPENAI_API_KEY"
            ]
        },
        "lint": {},
        "dev": {
            "cache": false,
            "persistent": true
        },
        "generate": {
            "dependsOn": ["^generate"],
            "cache": false
        },
        "clean": {
            "cache": false
        }
    }
}
